{
  "name": "pzpr",
  "version": "3.6.0-pre",
  "description": "Playing and editing puzzles by Javascript",
  "main": "index.html",
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "puzzle",
    "nikoli",
    "HTML5",
    "WebApp"
  ],
  "author": "sabo2",
  "license": "MIT",
  "repository": {
    "type": "hg",
    "url": "https://bitbucket.org/sabo2/pzprv3"
  },
  "scripts": {
    "build": "grunt default",
    "release": "grunt release",
    "release:gzip": "sh -c 'cd dist; tar czf $0 --exclude *.concat.js --exclude .DS_Store *; mv $0 ..' pzpr-$npm_package_version.tar.gz",
    "release:bz2": "sh -c 'cd dist; tar cjf $0 --exclude *.concat.js --exclude .DS_Store *; mv $0 ..' pzpr-$npm_package_version.tar.bz2",
    "release:zip": "sh -c 'cd dist; zip -9qr $0 * -x *.concat.js -x .DS_Store; mv $0 ..' pzpr-$npm_package_version.zip",
    "clean": "grunt clean",
    "lint": "grunt newer:jshint"
  },
  "devDependencies": {
    "grunt": "~0.4.2",
    "grunt-contrib-clean": "~0.5.0",
    "grunt-contrib-concat": "~0.3.0",
    "grunt-contrib-copy": "~0.5.0",
    "grunt-contrib-jshint": "^0.10.0",
    "grunt-contrib-uglify": "~0.2.7",
    "grunt-newer": "^0.7.0"
  }
}
